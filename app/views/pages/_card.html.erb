<!-- CSS -->
<style>
  .card-image {
    width: 100%;
    height: 175px;
    background-image: url(<%= image_path('business.jpg') %>);
    background-size: cover;
    position: relative;
  }
</style>

<!-- HTML -->
<div class="card">
  <div class="card-image">
  </div>
  <div class="card-content">
    <h1><%= business.name %></h1>
    <div class="card-rating">
    <%= render 'stars', business: business %>
      <p><%= business.ratings %></p>
      <p id='card-rating-number'></p>
    </div>
    <p><%= business.phone %> • <%= business.shortaddress.chomp(", Montréal") %></p>
    <p id="card-description">
      <%= truncate(business.reviews.first.content, length: 70) %>
    </p>
    <div class="card-action">
      <a href="" class="btn primary-button">ADD</a>
      <a href="" id="map-button" class="btn secondary-button" data-toggle="modal" data-target="#myModal">DETAILS</a>
      <%= render "components/info_modal" %>
    </div>
  </div>
</div>

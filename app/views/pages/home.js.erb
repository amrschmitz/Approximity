var businessesHTML = "";

<% @businesses.each do |business|%>
  businessesHTML= businessesHTML + "<%= j(render 'components/card', business: business) %>"
<% end %>


var businessCards = document.getElementById('business-cards')
businessCards.innerHTML = businessesHTML

if (document.querySelector(".landing-banner") !== null) {
  // Transfert de la valeur de l'adresse du banner Ã  la barre du bas
  document.getElementById('flat_address_start').value = document.getElementById('flat_address_start_banner').value
  document.getElementById('origin').value = document.getElementById('flat_address_start_banner').value

  // Scroll down
  window.scrollTo({ top: window.innerHeight, behavior: "smooth" })

  // Removes the banner after 5 milleseconds
  setTimeout(() => {
    document.querySelector(".landing-banner").remove();
  }, 500)
}

<div
  id='map'
  style="width: 100vw; height: 100vh"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
<script>
  mapboxgl.accessToken = <%= ENV['MAPBOX_API_KEY'] %>;
  var map = new mapboxgl.Map({
      container: 'map',
      style: 'mapbox://styles/mapbox/streets-v9'
  });
</script>

<!-- CSS -->
<style>
  .card-image {
    width: 100%;
    height: 175px;
    background-image: url(<%= image_path('business.jpg') %>);
    background-size: cover;
    position: relative;
  }
</style>

<!-- HTML -->
<div class="card">
  <div class="card-image">
  </div>
  <div class="card-content">
    <h1><%= business.name %></h1>
    <div class="card-rating">
      <%= render 'components/stars', business: business %>
      <p><%= business.ratings %></p>
    </div>
    <div class="card-info">
      <p>
        <%= business.phone %> • <%= business.shortaddress.chomp(", Montréal") %>
      </p>
    </div>
    <p class="card-description">
      <%= truncate(business.reviews.first.content, length: 70) %>
    </p>
    <div class="card-action">
      <a href="#" class="btn primary-button">
        ADD
      </a>
      <a href="#" id="map-button" class="btn secondary-button" data-toggle="modal" data-target="#<%=business.id %>">
        DETAILS
      </a>
      <%= render "components/info_modal", {business: business} %>
    </div>
  </div>
</div>
